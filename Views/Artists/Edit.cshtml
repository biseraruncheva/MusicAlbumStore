@model MusicAlbumStore.Models.Artist

@{
    ViewData["Title"] = "Edit";
}
<style>
    body {
        background-color: ghostwhite
    }
</style>
<h1>Edit</h1>

<h4>Artist</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ArtistName" class="control-label"></label>
                <input asp-for="ArtistName" class="form-control" />
                <span asp-validation-for="ArtistName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Biography" class="control-label"></label>
                <input asp-for="Biography" class="form-control" />
                <span asp-validation-for="Biography" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Website" class="control-label"></label>
                <input asp-for="Website" class="form-control" />
                <span asp-validation-for="Website" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Label" class="control-label"></label>
                <input asp-for="Label" class="form-control" />
                <span asp-validation-for="Label" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FormationYear" class="control-label"></label>
                <input asp-for="FormationYear" class="form-control" />
                <span asp-validation-for="FormationYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DisbandmentYear" class="control-label"></label>
                <input asp-for="DisbandmentYear" class="form-control" />
                <span asp-validation-for="DisbandmentYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ArtistImage" class="control-label"></label>
                <input type="file" asp-for="ArtistImage" class="form-control" name="artistimgfile" />
                <span asp-validation-for="ArtistImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
